@page
@model ASPuppgiftETT.Pages.JoinEventModel

@{
    ViewData["Title"] = "MyEvents";
}

<div class="container">
    <h1 class="text-center">EventName</h1>
    <div class="container d-flex justify-content-center">
        <div class="card mx-2" style="width: 32rem;">
            <img src="/images/summerburst.png" class="card-img-top" alt="" />
            <div class="d-flex flex-row justify-content-sm-between">
                <div class="container-fluid">
                    <dl class="row align-content-center">
                        <dt class="col-sm-6">
                            @Html.DisplayNameFor(model => model.Event.Title)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Event.Title)
                        </dd>
                        <dt class="col-sm-6">
                            @Html.DisplayNameFor(model => model.Event.Description)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Event.Description)
                        </dd>
                        <dt class="col-sm-6">
                            @Html.DisplayNameFor(model => model.Event.Location)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Event.Location)
                        </dd>
                        <dt class="col-sm-6">
                            @Html.DisplayNameFor(model => model.Event.Adress)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Event.Adress)
                        </dd>
                        <dt class="col-sm-6">
                            @Html.DisplayNameFor(model => model.Event.Date)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Event.Date)
                        </dd>
                        <dt class="col-sm-6">
                            @Html.DisplayNameFor(model => model.Event.Tickets_left)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Event.Tickets_left)
                        </dd>
                    </dl>
                </div>
                <div class="container-fluid text-end">
                    <dl class="d-flex flex-column justify-content-end align-content-end">
                        <dt class="col-sm-11">
                            @Html.DisplayNameFor(model => model.Event.Organizer.Name)
                        </dt>
                        <dd class="col-sm-11">
                            @Html.DisplayFor(model => model.Event.Organizer.Name)
                        </dd>
                        <dt class="col-sm-11">
                            @Html.DisplayNameFor(model => model.Event.Organizer.Email)
                        </dt>
                        <dd class="col-sm-11">
                            @Html.DisplayFor(model => model.Event.Organizer.Email)
                        </dd>
                        <dt class="col-sm-11">
                            @Html.DisplayNameFor(model => model.Event.Organizer.Phone_number)
                        </dt>
                        <dd class="col-sm-11">
                            @Html.DisplayFor(model => model.Event.Organizer.Phone_number)
                        </dd>
                    </dl>
                </div>
            </div>

            <!--
            <div class="d-flex flex-row justify-content-center">
                <a class="m-2 btn btn-outline-success align-self-center">Join event</a>
                <a class="m-2 btn btn-outline-danger align-self-center">Return</a>
            </div>
                -->
            <form method="post" action="">
                <input asp-for="MyEvent.Title" class="m-2 btn btn-outline-success align-self-center" type="submit" value="Join event" />
            </form>

        </div>
    </div>
</div>
