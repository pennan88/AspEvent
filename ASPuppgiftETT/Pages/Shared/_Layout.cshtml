<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ASPuppgiftETT</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container d-sm-inline-flex">
                <ul class="navbar-nav flex-grow-1 justify-content-start">
                    <li class="nav-item mx-2">
                        <a class="btn btn-outline-primary " asp-area="" asp-page="/Index">Home</a>
                    </li>
                    <li class="nav-item mx-2">
                        <a class="btn btn-outline-success" asp-area="" asp-page="/EventPage">Upcoming Events</a>
                    </li>
                    <li class="nav-item mx-2">
                        <a class="btn btn-outline-success" asp-area="" asp-page="/MyEvents">My Events</a>
                    </li>
                </ul>
            </div>
            <div class="container d-sm-inline-flex border-1">
                <ul class="navbar-nav flex-grow-1 justify-content-end">
                    <li class="nav-item mx-2">
                        <a class="btn btn-outline-primary" asp-area="" asp-page="">Login</a>
                    </li>
                    <li class="nav-item mx-2">
                        <a class="btn btn-outline-primary" asp-area="" asp-page="">Register</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - ASPuppgiftETT - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
